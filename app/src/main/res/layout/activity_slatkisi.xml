<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".slatkisi"
    android:background="@drawable/grey">

        <Button
            android:id="@+id/btn_hrana4"
            android:layout_width="76dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/radius_btn"
            android:onClick="clickHranaSlatkisi"
            android:text="  Hrana"
            android:textAllCaps="false"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btn_pice4"
            android:layout_width="76dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="145dp"
            android:background="@drawable/radius_btn"
            android:onClick="clickPiceSlatkisi"
            android:text="  Pice"
            android:textAllCaps="false"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btn_korpa3"
            android:layout_width="76dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="223dp"
            android:background="@drawable/radius_btn"
            android:onClick="otvoriKorpuSlatkisi"
            android:text="  Korpa"
            android:textAllCaps="false"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/palacinke"
            android:layout_width="239dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="399dp"
            android:layout_marginLeft="399dp"
            android:layout_marginBottom="35dp"
            android:text="Kreiraj svoju verziju palacinke"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="328dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="188dp"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="7dp"
            android:text="Napravite pravi izbor!"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageViewKafa"
            android:layout_width="173dp"
            android:layout_height="182dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="408dp"
            android:layout_marginLeft="408dp"
            android:onClick="kreirajPalacinke"
            app:srcCompat="@drawable/palcinka" />

        <ImageView
            android:id="@+id/imageViewCola"
            android:layout_width="173dp"
            android:layout_height="182dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="147dp"
            android:layout_marginLeft="147dp"
            android:onClick="birajObicneSlatkise"
            app:srcCompat="@drawable/slatkis" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="152dp"
            android:layout_marginLeft="152dp"
            android:layout_marginBottom="63dp"
            android:text="Gotovi slatkisi"
            android:textSize="24sp" />

    </RelativeLayout>